generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum StatusPedido {
  PENDENTE
  EM_ANDAMENTO
  CONCLUIDO
  CANCELADO
}

enum StatusOrcamento {
  PENDENTE
  APROVADO
  REJEITADO
  CANCELADO
  EM_ANDAMENTO
}

enum FileType {
  PDF
  DWG
  IMAGE
  OTHER
}

model Customer {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String    @unique
  password   String
  status     Boolean
  role       Role      @default(USER)
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("customers")
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  imagePath String
  createdAt DateTime @default(now())
  items     Item[]

  @@map("category")
}

model Item {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  subname    String
  createdAt  DateTime    @default(now())
  categoryId String      @db.ObjectId
  status     String      @default("PENDENTE")
  category   Category    @relation(fields: [categoryId], references: [id])
  itemType   String?
  files      ItemFile[]
  pedidos    Pedido[]
  orcamentos Orcamento[]

  @@map("items")
}

model ItemFile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  path      String
  type      FileType
  item      Item     @relation(fields: [itemId], references: [id])
  itemId    String   @db.ObjectId
  createdAt DateTime @default(now())

  @@map("item_files")
}

model Pedido {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  quantidade  Int
  material    String
  dataEmissao DateTime
  operacao    String
  cliente     String?
  itemId      String   @db.ObjectId
  item        Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  status      StatusPedido @default(PENDENTE)

  @@map("pedidos")
}

model Orcamento {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  quantidade  Int
  material    String
  dataEmissao DateTime
  operacao    String
  cliente     String?
  itemId      String   @db.ObjectId
  item        Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  valor       Float
  createdAt   DateTime @default(now())
  status      StatusOrcamento @default(PENDENTE)

  @@map("orcamentos")
}

model Historico {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  acao        String
  entidade    String
  entidadeId  String   @db.ObjectId
  dados       String?
  usuarioId   String?  @db.ObjectId
  usuarioNome String?
  createdAt   DateTime @default(now())

  @@map("historico")
}